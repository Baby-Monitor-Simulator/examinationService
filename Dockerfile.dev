FROM openjdk:17-jdk-slim

WORKDIR /examination

# Copy Maven Wrapper and pom.xml
COPY mvnw pom.xml ./
COPY .mvn .mvn

# Copy source files
COPY src ./src

# Ensure the mvnw script is executable
RUN chmod +x mvnw

# Copy the entrypoint script
COPY entrypoint.sh /examination/entrypoint.sh
RUN chmod +x /examination/entrypoint.sh

# Set the entrypoint
ENTRYPOINT ["./entrypoint.sh"]